<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
        <AppendRuntimeIdentifierToOutputPath>false</AppendRuntimeIdentifierToOutputPath>
        <AppendTargetFrameworkToOutputPath>false</AppendTargetFrameworkToOutputPath>
        <LangVersion>preview</LangVersion>
        <NoWarn>1701;1702;CS0078</NoWarn>
        <Nullable>disable</Nullable>
        <OutputPath>bin</OutputPath>
        <OutputType>WinExe</OutputType>
        <PlatformTarget>x64</PlatformTarget>
        <ProduceReferenceAssemblies>false</ProduceReferenceAssemblies>
        <ProduceReferenceAssembly>False</ProduceReferenceAssembly>
        <StartupObject></StartupObject>
        <TargetFramework>net6.0</TargetFramework>
        <!--<UseWindowsForms>True</UseWindowsForms>-->
    </PropertyGroup>

    <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Debug|AnyCPU'">
        <DefineConstants>DEBUG;TRACE;</DefineConstants>
        <Optimize>false</Optimize>
    </PropertyGroup>

    <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Release|AnyCPU'">
        <DefineConstants>TRACE;</DefineConstants>
        <Optimize>true</Optimize>
    </PropertyGroup>

    <ItemGroup>
        <Compile Remove="AxesTest.cs" />
        <Compile Remove="BlitTest.cs" />
        <Compile Remove="Configuration.cs" />
        <Compile Remove="Configuration.Designer.cs" />
        <Compile Remove="DrawArraysInstancedTest.cs" />
        <Compile Remove="Ground.cs" />
        <Compile Remove="HighlightTriangle.cs" />
        <Compile Remove="MovementTest.cs" />
        <Compile Remove="NoiseTest.cs" />
        <Compile Remove="ShowTexture.cs" />
        <Compile Remove="SkyBoxTest.cs" />
    </ItemGroup>

    <ItemGroup>
      <EmbeddedResource Remove="Configuration.resx" />
    </ItemGroup>

    <ItemGroup>
      <None Remove="data\font.png" />
      <None Remove="data\teapot.hits" />
      <None Remove="data\ufl2.txt" />
    </ItemGroup>

    <ItemGroup>
      <None Include="AxesTest.cs" />
      <None Include="BlitTest.cs" />
      <None Include="HighlightTriangle.cs" />
      <None Include="MovementTest.cs" />
      <None Include="NoiseTest.cs" />
    </ItemGroup>

    <ItemGroup>
      <PackageReference Include="BepuPhysics" Version="2.5.0-beta.8" />
      <PackageReference Include="NAudio.WinMM" Version="2.1.0" />
    </ItemGroup>

    <ItemGroup>
        <ProjectReference Include="..\Gl\Gl.csproj" />
        <ProjectReference Include="..\Common\Common.csproj" />
        <ProjectReference Include="..\Shaders\Shaders.csproj" />
    </ItemGroup>

    <ItemGroup>
      <Compile Update="Properties\Resources.Designer.cs">
        <DesignTime>True</DesignTime>
        <AutoGen>True</AutoGen>
        <DependentUpon>Resources.resx</DependentUpon>
      </Compile>
    </ItemGroup>

    <ItemGroup>
      <EmbeddedResource Update="Properties\Resources.resx">
        <Generator>ResXFileCodeGenerator</Generator>
        <LastGenOutput>Resources.Designer.cs</LastGenOutput>
      </EmbeddedResource>
    </ItemGroup>

    <ItemGroup>
        <None Update="data\checkered.png">
          <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
        </None>
        <None Update="data\ibm3270.txt">
          <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
        </None>
        <None Update="data\skybox.png">
          <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
        </None>
        <None Update="data\teapot.obj">
          <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
        </None>
        <None Update="data\Untitled.png">
          <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
        </None>
    </ItemGroup>

    <Target Name="PreBuild" BeforeTargets="PreBuildEvent">
        <Exec Command="rd /s/q $(outdir)" />
        <Exec Command="md $(outdir)" />
        <Exec Command="..\fixeol\bin\fixeol.exe" />
    </Target>
    <Target Name="PostBuild" AfterTargets="PostBuildEvent">
        <Exec Command="..\BitmapToRaster\bin\BitmapToRaster.exe data\skybox.png $(targetdir)" />
        <Exec Command="..\BitmapToRaster\bin\BitmapToRaster.exe data\checkered.png $(targetdir)" />
        <Exec Command="..\BitmapToRaster\bin\BitmapToRaster.exe data\untitled.png $(targetdir)" />
    </Target>

</Project>
